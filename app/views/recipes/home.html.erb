<div class="home">
  <h1><%= link_to "MUNCHER", root_path %></h1>

  <section class="search-container">
    <%= form_tag(recipes_path, method: :get) do %>
    <%= label_tag "Find you flavor..." %>
    <%= text_field_tag :term, nil, placeholder: "🔍", class: "search-box" %>
    <%= render partial: "flash" %>
    <%= submit_tag 'Search', class: "search button" %>
    <% end %>
  </section>
</div>
