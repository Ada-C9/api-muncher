<%= form_tag recipes_path, method: :get do %>

  <%= text_field_tag :search, params[:search] %>

  <%= submit_tag 'Search' %>

<% end %>

<% if @recipes %>
<ul>
    <% @recipes.each do |recipe| %>
    <li>
      <img src="<%= recipe.photo_url %>" />
      <%= link_to recipe.name, recipe_path(recipe.uri_id) %>
    </li>
    <% end %>
</ul>
  <%= paginate @recipes, window: 2, outer_window: 1 %>
<% end %>
