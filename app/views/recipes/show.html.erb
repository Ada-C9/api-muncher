<section class="recipe">
  <% if @result %>

      <%= image_url(@result) %>
      <h2><%= @result.label.titlecase %></h2>
      <%= link_to @result.source, @result.orig_url.html_safe, target: :_blank %>
      <h3> Ingredients </h3>
      <ul>
      <% @result.ingredients.each do |ingredient| %>
      <li><%= ingredient %></li>
      <% end %>
    </ul>
    <section class="tags">
      <ul>
      <% @result.health.each do |label| %>
      <li><%=link_to label, results_path(label), class: " health" %></li>
      <% end %>

      <% @result.diet.each do |label| %>
      <li><%= link_to label, results_path(label), class: "diet" %></li>
      <% end %>
    </ul>
    </section>
    </article>
  <% end %>
</section>
