<nav>
  <div class="index-search">
      <%= form_tag recipes_path, method: :get do %>
      <div class="row">
        <div class="col-25">
          <%= label_tag(:search, "Find your flavor...") %>
        </div>
        <div class="col-75">
          <%= text_field_tag(:search) %>
        </div>
      </div>
      <div>
        <%= submit_tag("Search") %>
      </div>

    <% end %>
</nav>

<h1><%= @recipe.name %></h1>
<h3>By: <%= @recipe.contributor %></h3>

<section>
  <%= image_tag @recipe.image %>

</section>

<section>
  <h4>Ingredients</h4>
  <ul>
    <% @recipe.ingredients.each do |ingredient| %>
    <li>
      <%= ingredient %>
    </li>
    <% end %>
  </ul>
</section>


<section>
  <h4>Dietary Labels</h4>
  <ul>
    <% @recipe.dietary_labels.each do |label| %>
    <li>
      <%= label %>
    </li>
    <% end %>
  </ul>
</section>

<section>
  <h4>Health Labels</h4>
  <ul>
    <% @recipe.health_labels.each do |label| %>
    <li>
      <%= label %>
    </li>
    <% end %>
  </ul>
</section>
