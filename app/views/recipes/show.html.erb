<h2><%= link_to "MUNCHER", root_path %></h2>

<p><%= link_to @recipe.title, @recipe.url, target: :_blank %></p>
<p>By <%= @recipe.source %></p>
<%= link_to image_tag(@recipe.image, alt: @recipe.title), @recipe.url, target: :_blank %>

<p>Ingredients</p>
<ul>
  <% @recipe.ingredients.each do |ingredient| %>
    <li><%= ingredient %></li>
  <% end %>
</ul>
<p>Dietary Labels</p>
<ul>
  <% @recipe.diet_labels.each do |diet_label| %>
    <li><%= diet_label %></li>
  <% end %>
</ul>
