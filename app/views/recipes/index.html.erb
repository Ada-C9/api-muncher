<h1>Recipes#index</h1>

<section class="recipes-list">
  <h1>Recipe Search Result</h1>
  <% if @recipes %>
    <ul>
      <% @recipes.each do |recipe| %>
        <li>
          <h3><%= recipe.name %></h3>
          <%= link_to recipe.name, recipes_detail_path(:uri_wanted => recipe.uri), :method => :get %>
          <%= recipe.name %>
          <%= image_tag(recipe.image, size: 200, alt: "#{recipe.name}") %>
        </li>
      <% end %>
    </ul>
  <% end %>
</section>
