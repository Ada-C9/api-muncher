<span class="title">
  <h1><%= @recipe.label %></h1>
  <h3> By <%= link_to @recipe.source, @recipe.url, target: :_blank %> </h3>
</span>

<span class="image_show_page">
  <img src="<%= @recipe.image %>" alt=" <%= @recipe.label %> ">
</span>

<span class="ingredientlines">
  <p>Ingredients:</p>
  <ul>
    <% @recipe.ingredientLines.each do |ingredient| %>
      <li><%= ingredient %></li>
    <% end %>
  </ul>
</span>

<span class="dietLabels">
  <p>Dietary Labels:</p>
  <ul>
    <% @recipe.dietLabels.each do |label| %>
      <li>
        <%= label %>
      </li>
    <% end %>
  </ul>

</span>
