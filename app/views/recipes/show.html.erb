<% require 'pry' %>

<%= form_tag(search_path, method: "get") do %>
  <%= label_tag(:q, "Find your flavor:") %>
  <%= text_field_tag(:q, @query) %>
  <%= submit_tag("Search") %>
<% end %>

<% if @recipe %>
    <h1><%= @recipe.name %></h1>

    <img>
      <%= image_tag(@recipe.image_url, :alt => "#{@recipe.name}") %>
    </img>
    
    <ul>
      <li>
        <%= "Allergy/Diet Restriction Info: #{@recipe.allergy}".delete("[]") =%>
      </li>

      <li>
        <%= "Nutritional Info: #{@recipe.nutrition}".delete("[]") =%>
      </li>

      <li>
        <%= link_to "Original #{@recipe.name} recipe source", @recipe.link, target: :_blank =%>
      </li>

      <li>
        <ul>
          <% @recipe.ingredients.each do |ingredient| %>
            <li>
              <%= ingredient %>
            </li>
          <% end %>
        </ul>
      </li>
    </ul>

<% end %>
