<h1><%= @recipe.name.capitalize %></h1>

<img src="<%= @recipe.image %>">
<p><a href="<%= @recipe.url %>" target="_blank">Source Recipe</a></p>
<p>Ingredients:</p>
<ul>
  <% @recipe.ingredients.each do |ingredient| %>
  <li><%= ingredient %></li>
  <% end %>
</ul>


<p>Health and Dietary Labels:</p>
<ul>
  <% @recipe.dietary_info.each do |label| %>
  <li><%= label %></li>
  <% end %>
  <% @recipe.health_info.each do |label| %>
  <li><%= label %></li>
  <% end %>
</ul>
