<h2><%= @recipe.label %></h2>

<section>
  <%= image_tag(@recipe.image) %>
  <p>
    Source: <%= link_to @recipe.source, @recipe.url, target: "_blank" %>.
  </p>
  <h3>Ingredients</h3>
  <ul>
    <% @recipe.ingredient_lines.each do |ingredient_line| %>
      <li><%= ingredient_line %></li>
    <% end %>
  </ul>
  <h3>Dietary Labels</h3>
  <ul>
    <% @recipe.diet_labels.each do |diet_label| %>
      <li><%= diet_label %></li>
    <% end %>
  </ul>
  <h3>Health Labels</h3>
  <ul>
    <% @recipe.health_labels.each do |health_label| %>
      <li><%= health_label %></li>
    <% end %>
  </ul>

</section>
