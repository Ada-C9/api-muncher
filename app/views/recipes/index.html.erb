<h1>Results for recipes</h1>

<%= will_paginate @recipes, id: "pagination" %>

<section class="recipes-list">

  <% if @recipes %>
      <% @recipes.each do |recipe| %>
      <ul class="small medium">
        <li>
          <%= link_to recipe.label, show_recipe_path(recipe.uri.split("_")[1]) %>
        </li>
        <li>
          <%= link_to(image_tag(recipe.image), show_recipe_path(recipe.uri.split("_")[1])) %>
        </li>
      </ul>
      <% end %>
  <% end %>
</section>
