<header>
  <%= render partial: 'search_form' %>
</header>

<main>
  <h2 class="title">Results for "<%= @query.capitalize %>"</h2>

  <section class="recipe-list">
    <% if @recipes %>
      <% @recipes.each do |recipe| %>
      <div class="recipe">
        <%= image_tag recipe.image %>
        <h4><%= link_to recipe.title, recipe_path(recipe.id) %></h4>
      </div>
      <% end %>
    <% else %>
      <div>
        <h4>Sorry, no results for your search</h4>
      </div>
    <% end %>
  </section>
  <% if @recipes %>
    <%= will_paginate @recipes, renderer: FoundationPagination::Rails %>
  <% end %>
</main>
