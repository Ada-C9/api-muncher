<h2><%= @recipe.name %></h2>
<h3><span>From:</span> <%= link_to @recipe.source, @recipe.url, target: :_blank %></h3>
<%= image_tag @recipe.photo %>
<h4>Ingredients:</h4>
<ul>
  <% @recipe.ingredients.each do |ingredient| %>
    <li><%= ingredient %></li>
  <% end %>
</ul>
<h4>Dietary Labels</h4>
<ul>
  <% @recipe.diet_labels.each do |diet| %>
    <li><%= diet %></li>
  <% end %>
</ul>
<h4>Health Labels</h4>
<ul>
  <% @recipe.health_labels.each do |health| %>
    <li><%= health %></li>
  <% end %>
</ul>
