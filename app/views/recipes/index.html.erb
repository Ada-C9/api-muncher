<h1>Muncher</h1>

<section class="search_form">
  <%= render "form" %>
</section>

<h2>Results for <%= @query %></h2>

<section class="recipes-container">
  <% if @recipes %>
    <ul>
      <% @recipes.each do |recipe| %>
      <li>

        <%= link_to image_tag( recipe.img, size: "250x250", alt: recipe.title), recipe_path(recipe.id) %>
        <%= link_to recipe.title, recipe_path(recipe.id) %>
      </li>
      <% end %>
    </ul>
  <% end %>
</section>

<nav class="page-nav" aria-label="Pagination">
  <%= will_paginate @recipes, renderer: FoundationPagination::Rails %>
</nav>
