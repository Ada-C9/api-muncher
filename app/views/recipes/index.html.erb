<section class="recipe-list">
  <ul>
     <% @recipes.each do |recipe|%>
     <li class="thumbnail">
       <div>
         <img src="<%= recipe.image %>" alt='recipe image'>
       </div>
      <p>
        <%= link_to recipe.label, recipe_path(recipe.uri.split("_")[1])%>
      </p>
     </li>

  </ul>
  <% end %>
</section>
<section>
  <%= paginate @recipes %>
</section>
