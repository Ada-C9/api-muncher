<section class="grid-container">
	<section class="grid-x grid-margin-x align-center">
		<ul class="prod-container">
			<% @recipes.each do |result| %>
			<li class="product-summary">
				<!-- <div class="row cell small-4 align-center"> -->
					<div class="block-thing">
						<div class="image-wrapper overlay-fade-in">
							<%= image_tag(result.image, :alt => "recipe image", :class => "found-image") %>
							<div class="image-overlay-content">
								<h4><%= link_to result.name, { action: 'show', :uri => result.uri }%></h4>
							</div>
						</div>
					<!-- </div> -->
				</div>
			</li>
			<%end%>
		</ul>
	</section>
</section>



	<ul>
  <section class="grid-x grid-margin-x pagination-group">
<!-- <section class="pagination-ul"> -->

			<% (1...@max_pages).each do |page| %>
			<section class="cell shrink text-center pagination-numbers">
				<%= link_to page, { action: 'results', :from => page } %>
			</section>
			<% end %>

</section>

</ul>


