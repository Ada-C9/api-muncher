<section class="page">

  <h2 class="nav"><%= @recipe.name %>'s recipe:</h2>
  <section class="byline">By: <%= link_to "#{@recipe.source}",  target: "_blank" %></section>

  <div class="row">
    <div class="pic medium-6 medium-push-6 columns">
      <%= image_tag "#{@recipe.image}", alt:"image"%>
    </div>

    <div class="ingredients medium-6 medium-pull-6 columns">
      <h4>Ingredients</h4>
      <ul>
        <% @recipe.ingredients.each do |ingredient| %>
        <li>
          <%= ingredient %>
        </li>
        <% end %>
      </ul>

      <h4>Dietary Information</h4>
      <% unless @recipe.dietlabels == [] %>
      <ul>
        <% @recipe.dietlabels.each do |label| %>
        <li><%= label %></li>
        <% end %>
        <% end %>

      </ul>


    </div>

  </div>
</section>
