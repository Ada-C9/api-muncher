<section class="recipes-list">
  <h3>Recipes </h3>
  <div class="grid-x grid-padding-x align-center">

    <% if @recipes %>
      <% @recipes.each do |recipe| %>
        <%= image_url(recipe) %>
        <%= link_to recipe.name, recipe_path(recipe.get_id) %>
      <% end %>
    <% end %>
  </div>
</section>
<%= will_paginate @recipes %>
