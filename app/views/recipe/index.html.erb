<div class="index-search">
  <%= render partial: "search_bar", locals: {search_title: "Start New Search"}%>
</div>
<h1>Search Results for <%= @search_terms%></h1>
<%= render partial: "pagination_nav" %>
<section class="results-container">
  <% @recipes.each do |recipe| %>
    <section class="result">
      <%= image_tag recipe.photo %>
      <h4><%= link_to recipe.name, recipe_path(recipe.id) %></h4>
    </section>
  <% end %>
</section>
<%= render partial: "pagination_nav" %>
