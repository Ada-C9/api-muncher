<nav>
  <div class="index-search">
      <%= form_tag recipes_path, method: :get do %>
      <div class="row">
        <div class="col-25">
          <%= label_tag(:search, "Find your flavor...") %>
        </div>
        <div class="col-75">
          <%= text_field_tag(:search) %>
        </div>
      </div>
      <div>
        <%= submit_tag("Search") %>
      </div>

    <% end %>
</nav>



<h2>Results for <%= @query %></h2>
<% if @recipes %>
<div class="journal-entries">

  <% @recipes.each do |recipe| %>
  <section class="entry">
    <h2 class="recipe-title"><%= link_to recipe.name, recipe_path(recipe.id) %></h2>
    <div>
      <%= link_to image_tag(recipe.image, :alt => "food image"), recipe_path(recipe.id) %>
    </div>
  </section>

  <% end %>
<% end %>
</div>
