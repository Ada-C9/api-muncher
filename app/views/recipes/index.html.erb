<h1> Results for <%= params[:search] %></h1>

<section class="index">
  <% @recipes.each do |recipe| %>
  <div>
    <%= image_tag(recipe.image) %>
  </div>
  <div>
    <%= link_to recipe.title, recipe_path(recipe.id) %>
  </div>
  <% end %>
</section>


<div class="pagination">
  <div class="page_info">
    <%= page_entries_info @recipes %>
  </div>
  <%= will_paginate @recipes, :container => false %>
</div>
