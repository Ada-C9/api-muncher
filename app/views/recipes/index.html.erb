

<section class="index">

  <h2 class="text-center"> <%= params[:query].capitalize %> Recipes</h2>

  <section class="item-box">

    <% @recipes.each do |r| %>
      <div class="card ">
        <div class="card-section">
          <div > <%= link_to image_tag(r.image, alt: "#{r.title} image"), recipe_path(r.id) %></div>
        </div>
        <h4><%= link_to r.title, recipe_path(r.id) %></h4>
      </div>
    </div>

  <% end%>
</section>


<!-- Pagination -->
<div class="pagination text-center">
  <div class="page_info"><%= page_entries_info @recipes %></div>
  <div class="pag">
    <%= will_paginate @recipes, :container => false %>
  </div>

</div>

</section>
