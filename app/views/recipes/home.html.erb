    <div class="row">
      <div class="col-25">
        <%= label_tag(:search, "Find your flavor...") %>
      </div>
      <div class="col-75">
        <%= text_field_tag(:search) %>
      </div>
    </div>
    <div>
      <%= submit_tag("Search") %>
    </div>

  <% end %>
