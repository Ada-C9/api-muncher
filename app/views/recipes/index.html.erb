<%= render partial: 'shared/search' %>

<h3 class='cell small-10 small-offset-1 medium-6 medium-offset-3 large-10 large-offset-1'>Search results for <%= @query %></h3>

<% @recipes.each do |recipe| %>
  <div class='card small-10 small-offset-1 medium-6 large-3 large-offset-1'>
    <div class="card-divider">
      <%= recipe.name %>
    </div>
    <%= link_to image_tag(recipe.image), recipe_path(uri: recipe.uri), class: 'card-picture' %>
  </div>
<% end %>

<%= will_paginate @recipes, class: 'cell pagination' %>
