

<section class="recipes-list">
  <% if @recipes %>
    <ul class="recipe-links-container">
      <% @recipes.each do |recipe| %>
        <li class="recipe-links">
          <%= link_to image_tag(recipe.image), recipe_path(:uri => recipe.uri, :label => recipe.label) %>
          <%= link_to recipe.label, recipe_path(:uri => recipe.uri, :label => recipe.label) %>
        </li>
      <% end %>
    </ul>
  <% end %>
</section>

<section class="pagination">
  <%= will_paginate @recipes %>
</section>
