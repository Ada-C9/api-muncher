<div class="favorite-container">
  <%= render partial: "header" %>

  <h3><strong>Favorite Recipes</strong></h3>
  <ul class="recipe-container">
    <% if @favorite_recipes == [] %>
      <h4>You don't have any favorite recipes in record.</h4>
    <% else %>
      <% @favorite_recipes.each do |recipe| %>
        <li class="recipe-info">
          <%= link_to image_tag(recipe.image, alt: recipe.label), recipe.url, target: :_blank %>
          <h4><%= link_to recipe.label, recipe.url, target: :_blank %></h4>
        </li>
      <% end %>
    <% end %>
  </ul>

</div>
