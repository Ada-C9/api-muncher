
<%= form_tag query_results_path, method: :get do %>
  <%=text_field_tag :query%>
  <%= submit_tag "Search", class:"button"%>
<%end%>

<ul>
  <%@recipes.each do |recipe|%>
    <li><%=link_to image_tag(recipe.image),recipe_show_path(recipe.label,:uri=>recipe.uri)%></li>
    <li><%=link_to recipe.label,recipe_show_path(recipe.label,:uri=>recipe.uri)%></li>
  <% end %>
</ul>
