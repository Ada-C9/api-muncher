<section class="recipe-search-results">
  <h1>Recipe Search Results</h1>
  <% flash.each do |key, value| %>
        <div class="flash-message"><%= value %></div>
      <% end %>
  <% if @recipes %>
    <ul>
      <% @recipes.each do |recipe| %>
        <li class="thumbnail">
          <%= link_to recipe_path(recipe.uri) do %>
            <%= image_tag (recipe.image) %>
          <% end %>
          <p>
            <%= link_to recipe.label, recipe_path(recipe.uri) %>
          </p>
        </li>
      <% end %>
    </ul>
  <% end %>
</section>

<section class="pagination">
    <%= paginate @recipes %>
</section>
