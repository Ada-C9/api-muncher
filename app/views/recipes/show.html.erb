<title>Show Recipe</title>
<%= render partial: "form" %>

<section class="recipe-details">
  <section class="page-headline">
    <h2> <%= @recipe.label %> </h2>
    <h5>By <%= link_to @recipe.source, @recipe.url %> </h5> <!--TODO: add link to source-->
  </section>
  <section class="recipe-container">
    <div>
      <section class="recipe-pic">
        <image>
          <%= image_tag(@recipe.image, alt: @recipe.label) %>
        </image>
      </section>
    </div>

    <div>
      <section class="recipe-list ingredients">
        <h5>Ingredients </h5>
        <ul>
          <% if @recipe.ingredients != nil  %>
          <% @recipe.ingredients.each do |i| %>
          <li> <%= i["text"] %> </li>
          <% end %>
          <% end %>
        </ul>
      </section>
    </div>
  </section>

  <section class="dietary-labels">
    <ul>
      <li><strong> Dietary labels:  </strong> </li>
      <% if @recipe.dietLabels != nil %>
      <% @recipe.dietLabels.each do |i| %>
      <li> <%= i %>  | </li>
      <% end %>
      <% end %>

      <% if @recipe.healthLabels != nil %>
      <% @recipe.healthLabels.each do |i| %>
      <li> <%= i %>  | </li>
      <% end %>
      <% end %>
    </ul>
  </section>
</section>

