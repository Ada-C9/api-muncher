<section class="recipes-list">
  <h1>Recipes Found</h1>
  <% if @recipes %>
  <ul>
    <% @recipes.each do |recipe| %>
    <div class= "recipe_img">
      <li>
        <p>
          <%= recipe.uri %>
        </p>
        <%= link_to image_tag(recipe.image, alt: "recipe-pic", class: "recipe-pic"), recipe_path(uri: recipe.uri) %>
      </li>
    </div>
    <li>
      <%= recipe.label %>
    </li>
    <% end %>
  </ul>
  <% end %>
</section>
