<h2><%= link_to "MUNCHER", root_path %></h2>

<p><%= link_to @recipe.label, @recipe.url, target: :_blank %></p>
<p>By <%= @recipe.source %></p>

<%= link_to image_tag(@recipe.image, alt: @recipe.label), @recipe.url, target: :_blank %>


<section>
  <%= image_tag @recipe.image %>

</section>

<section>
  <h4>Ingredients</h4>
  <ul>
    <% @recipe.ingredients.each do |ingredient| %>
    <li>
      <%= ingredient %>
    </li>
    <% end %>
  </ul>
</section>


<section>
  <h4>Dietary Info</h4>
  <ul>
    <% @recipe.dietary_info.each do |dietary_info| %>
    <li>
      <%= dietary info %>
    </li>
    <% end %>
  </ul>
</section>

<section>
  <h4>Health Labels</h4>
  <ul>
    <% @recipe.health_labels.each do |label| %>
    <li>
      <%= label %>
    </li>
    <% end %>
  </ul>
</section>
